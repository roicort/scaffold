---
interface Action {
	label: string;
	href: string;
}

interface Props {
	eyebrow?: string;
	title: string;
	description?: string;
	actions?: Action[];
}

import { withBase } from '../utils/slugify';

const { eyebrow, title, description, actions = [] } = Astro.props;
---

<section class="content-shell flex items-center">
	<div class="grid gap-4 max-w-3xl">
		{eyebrow && <p class="eyebrow">{eyebrow}</p>}
		<h1 class="text-4xl md:text-5xl lg:text-6xl leading-tight m-0">{title}</h1>
		{description && <p class="text-muted text-base md:text-lg max-w-2xl m-0">{description}</p>}
		{actions.length > 0 && (
			<div class="flex flex-wrap gap-3 mt-3">
				{actions.map((action) => (
					<a class="button primary" href={withBase(action.href)}>
						{action.label}
					</a>
				))}
			</div>
		)}
	</div>
</section>

<style>
	.content-shell {
		min-height: calc(100vh - calc(var(--grid-cell) * 1));
	}

	@media (max-width: 720px) {
		.content-shell {
			min-height: calc(100vh - calc(var(--grid-cell) * 4));
		}
	}
</style>
