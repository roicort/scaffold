---
import PageLayout from '../layouts/PageLayout.astro';
import Hero from '../components/Hero.astro';
import PostList from '../components/PostList.astro';
---

<PageLayout
	title="Studio scaffolding"
>
	<Hero
		eyebrow="Welcome to Blueprint Studio"
		title="A modern Astro scaffolding for agencies and content creators."
		description="Kickstart your next project with a solid foundation, featuring a blog, project showcases, and dark mode support."
		actions={[{ label: 'View Blog', href: '/blog' }]}
	/>

	<PostList
		heading="Blog"
		limit={6}
		viewAllHref="/blog"
	/>
		
</PageLayout>
