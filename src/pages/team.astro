---
import PageLayout from '../layouts/PageLayout.astro';
import Card from '../components/Card.astro';
import { getCollection } from 'astro:content';

const authorsEntries = await getCollection('authors');
const team = authorsEntries.map((entry) => entry.data);
---

<PageLayout
	title="About the studio"
	description="We shape product, brand, and code for mission-driven teams."
	eyebrow="Studio"
>
	<section class="content-shell py-12 space-y-8">
		<header class="space-y-3 max-w-3xl">
			<p class="text-xs uppercase tracking-[0.3em] text-subtle">Team</p>
			<h1 class="text-3xl sm:text-4xl font-semibold leading-tight text-ink">Meet the people behind the work</h1>
			<p class="text-base text-muted">
				A compact, senior team that blends research, design, and engineering to ship resilient products.
			</p>
		</header>

		<div class="grid gap-6 md:grid-cols-3">
			{team.map((person) => (
				<Card
					title={person.name}
					eyebrow={person.role}
					description={person.bio}
					image={person.avatar}
					imageAlt={person.name}
				>
					<div class="mt-3 space-y-1 text-sm text-subtle">
						{person.location && <p class="m-0 font-medium text-muted">{person.location}</p>}
						{person.focus && <p class="m-0">{person.focus}</p>}
					</div>
				</Card>
			))}
		</div>
	</section>
</PageLayout>
